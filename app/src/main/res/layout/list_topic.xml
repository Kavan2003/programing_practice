<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:clickable="true"
    android:id="@+id/ListTopicClick"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/TopicSerialNumberTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1."
            android:layout_marginBottom="0sp"
            android:paddingBottom="0sp"
            android:paddingTop="0sp"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:textColor="@color/primary"
            android:layout_marginStart="25sp"
            />
        <TextView
            android:id="@+id/TopicNameTextView"
            android:paddingBottom="05sp"
            android:paddingTop="05sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:layout_marginStart="25sp"
            android:gravity="start"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:textColor="@color/primary"
            tools:ignore="RtlSymmetry" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="50sp"
            android:layout_weight="0.2"

            android:contentDescription="@string/arrow"
            android:src="@drawable/ic_arrow_right_foreground"
            tools:ignore="ImageContrastCheck" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_seprator" />
</LinearLayout>
